{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch index.html in Firefox",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "file": "${workspaceFolder}/src/index.html",
      "reloadOnChange": {
        "watch": [
          "${workspaceFolder}/src/*",
          "${workspaceFolder}/src/**/*"
        ]
      }
    }
  ]
}
